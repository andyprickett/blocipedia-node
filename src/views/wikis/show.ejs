<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>
  
      <h1><%= wiki.title %></h1>
      <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>
      <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>

      <p><%- wiki.body %></p>
      <hr>

      <h1>Collaborators</h1>

      <ul class="list-group">
        <% wiki.collaborators.forEach((collaborator) => { %>
          <li class="list-group-item">
            <a href="/users/<%= collaborator.User.id %>"><%= collaborator.User.name %></a>
          </li>
        <% }) %>
      </ul>

      
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>