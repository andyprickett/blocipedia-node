<% if(messages.error || messages.notice) { %>
  <div class="alert alert-<%= messages.error ? 'danger' : 'warning' %> alert-dismissible fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>

    <% if(messages.error) { %>
      <% if(messages.error[0].param == undefined) { %>
        <ul>
          <li><%= `Error Message: ${messages.error}` %></li>
        </ul>
      <% } else { %>
        Validation errors:
        <ul>
          <% messages.error.forEach((err) => { %>
            <li><%= `Field: ${err.param}, Message: ${err.msg}` %></li>
          <% }) %>
        </ul>
      <% } %>
    <% } else { %>
      <p><%= messages.notice %></p>
    <% } %>
  </div>
<% } %>