      <!-- Page Features -->
      <section class="row text-center">

        <section class="col-lg-4">
          <h4 class="card-title">Create</h4>
          <p class="card-text">Make as many public wikis as you want about subjects that are important to you!</p>
        </section>

        <section class="col-lg-4">
          <h4 class="card-title">Collaborate</h4>
          <p class="card-text">Work with and share in the knowledge of multiple users!</p>
        </section>

        <section class="col-lg-4">
          <h4 class="card-title">Privatize</h4>
          <p class="card-text">Go Premium and share your private wikis with selected users!</p>
        </section>

      </section>
      <!-- /.row -->

      <!-- Account Options -->
      <section class="row justify-content-around text-center">

        <section class="col-lg-3 mt-5">
          <a href="#" class="btn btn-primary btn-lg btn-block pt-4 pb-4">Free Plan</a>
        </section>

        <section class="col-lg-3 mt-5">
          <a href="#" class="btn btn-primary btn-lg btn-block pt-4 pb-4">Premium Plan</a>
        </section>

      </section>
      <!-- /.row -->

    </main>
    <!-- /.container -->

    <% include ./partials/baseScripts.ejs %>
